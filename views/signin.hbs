<div class="bg bg-spaghetti">
    <div class="sign-form">
        <form action="/signin" method="POST" id="form" autocomplete="off">
            {{#if errorMessage}}
            <div class="error-message">{{errorMessage}}</div>
            {{/if}}
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                    placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="foodloverRadio"
                        value="foodlover" required>
                    <label class="form-check-label" for="foodloverRadio">Gimme food!</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="foodproviderRadio"
                        value="foodprovider" required>
                    <label class="form-check-label" for="foodproviderRadio">I'm a restaurant or homechef</label>
                </div>
            </div>
            <div class="form-group">
                <div id="captcha">{{{captcha}}}</div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
            <div class="form-group">
                {{!-- <h5>No account yet? <a href="/signup">Sign-up!</a></h5> --}}
            </div>
        </form>
    </div>
</div>