<div class="sign-form">
    <form action="/auth/requestdish/{{user.id}}" method="post" autocomplete="off">
        <h2>Request your food</h2>
        <div class="form-group">
            <label for="dish">Dish</label>
            <select class="form-control" name="dish" id="dish">
                {{#each dishesFromDB}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="requestTime">Date</label>
            <input class="form-control" type="date" name="requestTime" id="requestTime" value="{{today}}">
        </div>
        <div class="form-group">
            <label for="">Comment</label>
            <input class="form-control" type="text" name="comment" id="comment" placeholder="comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>